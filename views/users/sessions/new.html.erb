<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin">
        <div class="card-body">
          <h5 class="card-title text-center">Sign In to My LabU</h5>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:id => "form-signin"}) do |f| %>
            <div class="form-label-group my-auto">
              <%= f.label :email, "Email" %> <br /> <br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :style => "width: 100%;" %>
            </div>

            <div class="form-label-group">
              <%= f.label :password , "Password"  %> <br /> <br />
              <%= f.password_field :password, autocomplete: "current-password", :style => "width: 100%;" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="custom-control custom-checkbox mb-3">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <%= f.submit "Login", class: "btn btn-primary btn-lg active my-auto" %>
            <br>
            <br>
            <%= render "users/shared/links", :style => "text-center" %>
          <% end %>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>



