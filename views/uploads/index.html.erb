<% if !flash[:notice].blank? %>
  <div class = "alert alert-info">
    <%= flash[:notice] %>
  </div>
<% end %>

<br />

<%= link_to "New Upload", new_upload_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
  <thead>.
  <tr>
    <th>Name</th>
    <th>Download Link</th>
    <th> </th>
  </tr>
  </thead>

  <tbody>
  <% @uploads.each do |r| %>

    <tr>
      <td><%= r.name %></td>
      <td><%= link_to "Download Upload", r.attachment_url %></td>
      <td><%= button_to "Delete",  r, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{r.name}?" %></td>
    </tr>

  <% end %>
  </tbody>

</table>