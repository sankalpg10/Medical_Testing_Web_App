<%= form_for :something, url: :submit_form, method:'post' do |f|%>
    <div class="form-group row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Patient Name</label>
      <div class="col-sm-10">
        <input type="text" readonly class="form-control-plaintext" name="data[name]" value=<%= @Kit.name %>>
      </div>
    </div>
    <div class="form-group row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Patient Email</label>
      <div class="col-sm-10">
        <input type="text" readonly class="form-control-plaintext" name="data[email]" value=<%= @Kit.email %>>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Date of Birth</label>
      <div class="col-sm-10">
        <input type="date" class="form-control" name="data[date-of-birth]" value="<%#Patient.find_by_email(@Kit.email).dob %>">
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Date Sample was Taken</label>
      <div class="col-sm-10">
        <input type="date" class="form-control" name="data[sample-date-taken]">
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Date Sample Reached Lab</label>
      <div class="col-sm-10">
        <input type="date" class="form-control" placeholder="" name="data[date-reached-lab]">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Date Sample Uploaded</label>
      <div class="col-sm-10">
        <input type="date" class="form-control" value="<%= Date.today %>" name="data[date-sample-uploaded]">
      </div>
    </div>
    <div class="form-group row">
      <label for="inputPassword" class="col-sm-2 col-form-label">Result</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="" name="data[result]">
      </div>
    </div>
    <div class="form-group row">
      <label for="inputPassword" class="col-sm-2 col-form-label">Result for Test 2</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="" name="data[result-2]">
      </div>
    </div>
  <br>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
<style>
  .form-group {
    margin: 10px;
  }

  input {
    width: 300px !important;
  }


</style>